<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tarajano.block02app.MainActivity">

    <TextView
        android:id="@+id/pickAnimalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pick_an_animal"
        android:textSize="@dimen/screenFontHeader"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="16dp"
        />
    <ListView
        android:id="@+id/animalsListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/screenFontDefault"
        android:layout_below="@id/pickAnimalTextView" />

</RelativeLayout>
